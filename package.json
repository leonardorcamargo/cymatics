{
  "name": "cymatics",
  "version": "1.0.0",
  "homepage": "https://github.com/leonardorcamargo/cymatics",
  "description": "Aplicação de visualização de áudio em tempo real com animações psicodélicas",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "audio",
    "visualization",
    "cymatics",
    "electron",
    "music"
  ],
  "author": "Leonardo Camargo <leonardorcamargo@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "com.cymatics.app",
    "productName": "Cymatics",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo",
      "icon": "public/icon.png",
      "executableName": "cymatics"
    },
    "appImage": {
      "executableArgs": [
        "--no-sandbox",
        "--disable-setuid-sandbox"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music",
      "icon": "public/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3"
  }
}